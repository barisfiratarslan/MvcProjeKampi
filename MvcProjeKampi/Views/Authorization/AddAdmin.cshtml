@model EntityLayer.DTOs.AdminDto

@{
    ViewBag.Title = "AddAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Admin Güncelleme Sayfası</h2>
@using (Html.BeginForm("AddAdmin", "Authorization", FormMethod.Post))
{
    <div class="form-group">
        @*@Html.Label("Admin Kullanıcı Adı")*@
        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
        <br /><br />
        @Html.Label("Şifreyi Giriniz")
        @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
        <br /><br />
        @Html.Label("Rolü Seçiniz")
        @Html.DropDownListFor(x => x.AdminRole, (List<SelectListItem>)ViewBag.vr, new { @class = "form-control" })
        <br /><br />
        <button id="btn3" class="btn btn-info">Ekle</button>
    </div>
}