@using EntityLayer.Concrete
@model List<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkımda Veri Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Hakkımda Başlığı</th>
        <th>Durum</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutID</td>
            <td>Başlık</td>
            <td>@item.Status</td>
            @if (item.Status == true)
            {
                <td><a href="/About/Passive/@item.AboutID" class="btn btn-danger">Pasif Yap</a></td>
            }
            else
            {
                <td><a href="/About/Active/@item.AboutID" class="btn btn-warning">Aktif Yap</a></td>
            }
        </tr>
    }
</table>

@Html.Action("AboutPartial", "About")